{
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "default",
            "command": "clang++",
            "args": ["-g","-std=c++11", "${file}"],
            "isBuildCommand": true,
            "suppressTaskName": true,
            "problemMatcher": [
                "$tsc",
                "$lessCompile"
            ]
        },
         {
            "taskName": "simplex",
            "command": "clang++",
            "args": ["${workspaceRoot}/simplex/dualSimplex.cpp"],
            "isBuildCommand": true,
            "suppressTaskName": true,
            "problemMatcher":[
                "$tsc",
                "$lessCompile"
            ]
        },
        {
            "command": "dotnet",
            "taskName": "build-src-c-sharp",
            "options": 
            {
                "cwd":"${workspaceRoot}/src-c-sharp/"
            },
            "args":["build"],
            "isBuildCommand": true,
            "suppressTaskName": true,
            "problemMatcher":[
                "$msCompile"
            ]
        },
    ]
}